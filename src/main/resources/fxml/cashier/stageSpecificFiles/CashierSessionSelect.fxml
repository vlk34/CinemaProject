<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background: #F5F7FA; -fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group18.controller.cashier.stageSpecificFiles.CashierSessionSelectController">

    <VBox spacing="20">
        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>

        <!-- Selected Movie Info -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="card">
            <padding>
                <Insets bottom="20" left="25" right="25" top="20" />
            </padding>

            <HBox spacing="20">
                <ImageView fx:id="moviePosterView" fitHeight="180" fitWidth="120" />
                <VBox spacing="5">
                    <Label fx:id="movieTitleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label fx:id="movieGenresLabel" style="-fx-text-fill: #666666;" />
                    <Label style="-fx-text-fill: #666666;" text="Duration: 2 hours" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Session Selection -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="card">
            <padding>
                <Insets bottom="20" left="25" right="25" top="20" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Select Session" />

            <!-- Date Selection -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox.margin>
                    <Insets top="15" />
                </VBox.margin>

                <DatePicker fx:id="datePicker" promptText="Select Date">
                    <tooltip>
                        <Tooltip text="Select a date to view available sessions" />
                    </tooltip>
                </DatePicker>

                <Button onAction="#handleShowSessions" style="-fx-background-color: #2a1b35; -fx-text-fill: white;" text="Show Available Sessions">
                    <tooltip>
                        <Tooltip text="Click to view sessions for the selected date" />
                    </tooltip>
                </Button>
            </HBox>

            <!-- Sessions Grid -->
            <GridPane fx:id="sessionsGrid" hgap="0" style="-fx-alignment: CENTER;" vgap="0">
                <padding>
                    <Insets top="20" />
                </padding>

                <!-- Headers -->
                <Label style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Time" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Hall" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Available Seats" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-alignment: CENTER;" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                </columnConstraints>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>

        <!-- Hall Information -->
        <HBox spacing="20">
            <!-- Hall A Info -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="card" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="15" left="20" right="20" top="15" />
                </padding>

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Hall A" />
                <Label text="Capacity: 16 seats" />
                <Label text="Standard seating arrangement" />
            </VBox>

            <!-- Hall B Info -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="card" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="15" left="20" right="20" top="15" />
                </padding>

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Hall B" />
                <Label text="Capacity: 48 seats" />
                <Label text="Premium seating arrangement" />
            </VBox>
        </HBox>
    </VBox>
</ScrollPane>
