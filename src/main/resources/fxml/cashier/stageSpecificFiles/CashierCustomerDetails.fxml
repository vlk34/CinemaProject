<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<ScrollPane fitToWidth="true" style="-fx-background: #F5F7FA; -fx-background-color: #F5F7FA;"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group18.controller.cashier.stageSpecificFiles.CashierCustomerDetailsController">

    <VBox spacing="20">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <!-- Customer Information Section -->
        <VBox styleClass="card" spacing="15">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <Label text="Customer Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="150"/>
                    <ColumnConstraints minWidth="200" prefWidth="250"/>
                </columnConstraints>

                <!-- First Name -->
                <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Last Name -->
                <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Age -->
                <Label text="Age:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="ageField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <Button fx:id="verifyAgeButton" text="Verify Age for Discount"
                    onAction="#handleVerifyAge"
                    style="-fx-background-color: #2a1b35; -fx-text-fill: white;"/>
        </VBox>

        <!-- Additional Products Section -->
        <VBox styleClass="card">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <Label text="Additional Products" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Products TabPane -->
            <TabPane>
                <!-- Beverages Tab -->
                <Tab text="Beverages" closable="false">
                    <ScrollPane fitToWidth="true">
                        <FlowPane fx:id="beveragesContainer" hgap="20" vgap="20"/>
                    </ScrollPane>
                </Tab>

                <!-- Biscuits Tab -->
                <Tab text="Biscuits" closable="false">
                    <ScrollPane fitToWidth="true">
                        <FlowPane fx:id="biscuitsContainer" hgap="20" vgap="20"/>
                    </ScrollPane>
                </Tab>

                <!-- Toys Tab -->
                <Tab text="Toys" closable="false">
                    <ScrollPane fitToWidth="true">
                        <FlowPane fx:id="toysContainer" hgap="20" vgap="20"/>
                    </ScrollPane>
                </Tab>
            </TabPane>
        </VBox>
    </VBox>
</ScrollPane>