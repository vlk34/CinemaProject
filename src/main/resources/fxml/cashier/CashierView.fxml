<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="720.0" minWidth="1280.0"
      prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #F5F7FA;"
      xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.group18.controller.cashier.CashierController">

    <!-- Header Component -->
    <fx:include source="sharedComponents/CashierHeader.fxml"/>

    <!-- Stepper Component -->
    <fx:include source="sharedComponents/CashierStepper.fxml"/>

    <!-- Main Content Area -->
    <StackPane VBox.vgrow="ALWAYS">
        <!-- This will be dynamically loaded with different stages -->
        <fx:include fx:id="currentStage" source="stageSpecificFiles/CashierMovieSearch.fxml"/>
    </StackPane>

    <!-- Shopping Cart Component -->
    <fx:include source="sharedComponents/CashierCart.fxml" fx:id="cartContainer"/>

    <!-- Action Bar Component -->
    <fx:include source="sharedComponents/CashierActionBar.fxml" fx:id="actionBar"/>

</VBox>