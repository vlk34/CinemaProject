<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background: #F5F7FA; -fx-background-color: #F5F7FA;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group18.controller.manager.ManagerStaffController">
    <VBox spacing="20" style="-fx-background-color: #F5F7FA;">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Staff Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addStaffButton" text="Add New Staff"
                    style="-fx-background-color: #2a1b35; -fx-text-fill: white; -fx-background-radius: 5;">
                <padding>
                    <Insets top="8" right="15" bottom="8" left="15"/>
                </padding>
            </Button>
        </HBox>

        <!-- Staff Stats -->
        <FlowPane hgap="20" vgap="20">
            <!-- Active Staff Card -->
            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-background-radius: 10;"
                  minWidth="280" prefWidth="300" maxWidth="350" minHeight="120">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Label text="Active Staff" style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
                <Label text="24" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="2 new this month" style="-fx-text-fill: #2ECC71;"/>
            </VBox>

            <!-- Roles Distribution Card -->
            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-background-radius: 10;"
                  minWidth="280" prefWidth="300" maxWidth="350" minHeight="120">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Label text="Role Distribution" style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
                <VBox spacing="5">
                    <Label text="12 Cashiers" style="-fx-font-size: 14px;"/>
                    <Label text="8 Admins" style="-fx-font-size: 14px;"/>
                    <Label text="4 Managers" style="-fx-font-size: 14px;"/>
                </VBox>
            </VBox>
        </FlowPane>

        <!-- Staff Table Section -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Search and Filter Controls -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField promptText="Search staff..." prefWidth="300">
                    <padding>
                        <Insets top="8" right="15" bottom="8" left="15"/>
                    </padding>
                </TextField>
                <ComboBox promptText="Role" prefWidth="150"/>
                <ComboBox promptText="Status" prefWidth="150"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Export List" style="-fx-background-color: transparent; -fx-text-fill: #2a1b35; -fx-border-color: #2a1b35; -fx-border-radius: 5;">
                    <padding>
                        <Insets top="8" right="15" bottom="8" left="15"/>
                    </padding>
                </Button>
            </HBox>

            <!-- Staff Table -->
            <TableView fx:id="staffTable" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets top="20"/>
                </VBox.margin>
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="150"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- Pagination -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Previous" style="-fx-background-color: transparent; -fx-text-fill: #2a1b35;"/>
            <Label text="Page 1 of 3" style="-fx-text-fill: #666;"/>
            <Button text="Next" style="-fx-background-color: transparent; -fx-text-fill: #2a1b35;"/>
        </HBox>
    </VBox>
</ScrollPane>